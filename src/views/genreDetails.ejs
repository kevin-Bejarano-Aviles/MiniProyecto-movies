<%- include("partials/head") %> 
<body>
    <%- include("partials/header") %> 
    <div style="margin: 10px; display: flex; flex-direction: column;">
       <h1>Genero: <%= genre.name %> </h1>
        <h3>Rating: <%= genre.ranking %> </h3>
        <h3>Peliculas del genero <%= genre.name %>:</h3>
            <ul>
                <% genre.movies.forEach(movie => { %>
                    <li><a href="/movies/detail/<%= movie.id %>"><%= movie.title %></a></li>
                <% }) %>
            </ul>
        
    </div>
</body>
</html>