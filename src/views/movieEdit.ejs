<%- include("partials/head") %> 
<body>
    <%- include("partials/header") %> 
    <div style="margin: 10px; display: flex; flex-direction: column;">
       <form action="/movies/edit/<%= movie.id %>?_method=PUT" method="POST">
        <div>
            <label for="">Titulo de la pelicula</label>
            <input type="text" name="title" value="<%= movie.title %>">
        </div>
        <div>
            <label for="">Rating</label>
            <input type="text" name="rating" value="<%= movie.rating%>">
        </div>
        <div>
            <label for="">Awards</label>
            <input type="number" name="awards" value="<%= movie.awards%>">
        </div>
        <div>
            <label for="">Duracion en min</label>
            <input type="number" name="length" value="<%= movie.length%>">
        </div>
        <div>
            <label for="">Fecha de estreno</label>
            <input type="date" name="release_date" value="<%=date/* movie.release_date.toLocaleDateString("en-CA") */%>">
        </div>
        <div>
            <label for="">Seleccione un genero para la pelicula</label>
            <br>
            <select name="genre_id" id="">
                <option hidden selected value=<%=movie.genre.id %>><%=movie.genre.name %> </option>
                <!-- <option value="" disabled selected hidden>Seleccione un genero</option> -->
                <% generos.forEach(genero => { %>
                    
                    <option value=<%=genero.id%>><%= genero.name %></option> 
                <% }) %>
            </select>
        </div>
        <button type="submit">Modificar</button>
        <!-- <button type="reset">Cancelar</button> -->
       </form>
    </div>
    <div class="errors">
        <% if (typeof errors !='undefined' ) { %>
            <h5 style="color: red;">Errores</h5>
            <ul>
            <% errors.forEach(element=> { %>
        
              <li>
                <%= element.msg %>
              </li>
              <% }) %>
                </ul>
                <% } %>
    </div>
</body>
</html>