<%- include("partials/head") %> 
<body>
    <%- include("partials/header") %> 
    <div style="margin: 10px; display: flex; flex-direction: column;">
       <form action="/movies/create" method="POST">
        <div>
            <label for="">Titulo de la pelicula</label>
            <input type="text" name="title" value="">
        </div>
        <div>
            <label for="">Rating</label>
            <input type="text" name="rating" value="">
        </div>
        <div>
            <label for="">Awards</label>
            <input type="number" name="awards" value="">
        </div>
        <div>
            <label for="">Duracion en min</label>
            <input type="number" name="length" value="">
        </div>
        <div>
            <label for="">Fecha de estreno</label>
            <input type="date" name="release_date" value="">
        </div>
        <div>
            <label for="">Seleccione un genero para la pelicula</label>
            <br>
            <select name="genre_id" id="">
                <option value="" disabled selected hidden>Seleccione un genero</option>
                <% generos.forEach(genero => { %>
                    <option value=<%=genero.id%>><%= genero.name %></option> 
                <% }) %>
            </select>
        </div>
        <button type="submit">Crear</button>
        <button type="reset">Cancelar</button>
       </form>
    </div>
    <div class="errors">
        <% if (typeof errors !='undefined' ) { %>
            <h5 style="color: red;">Errores</h5>
            <ul>
            <% errors.forEach(element=> { %>
        
              <li>
                <%= element.msg %>
              </li>
              <% }) %>
                </ul>
                <% } %>
    </div>
</body>
</html>